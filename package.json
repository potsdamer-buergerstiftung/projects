{
  "name": "pbsprojects",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/**/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,vue}\""
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "turbo": "^1.3.1"
  },
  "engines": {
    "yarn": ">=1.22.0",
    "node": ">=14.0.0"
  },
  "resolutions": {
    "macos-release": "*"
  }
}
